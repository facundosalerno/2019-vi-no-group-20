{{#partial "login"}}
    <div class="container login">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="inputEmail1">Email</label>
                <input type="email" name="var_email" class="form-control" id="inputEmail1" aria-describedby="emailHelp" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="inputPassword1">Contraseña</label>
                <input type="password" name="var_password" class="form-control" id="inputPassword1" placeholder="Contraseña">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
    </div>
{{/partial}}
